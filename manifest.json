{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["jquery-2.2.3.min.js","background.js"],
    "persistent": false
  },
  "browser_action": {
  "default_icon": {
            "19": "images/icon19.png"
          },
    "default_title": "Make this page red"
  },
  "manifest_version": 2
}
